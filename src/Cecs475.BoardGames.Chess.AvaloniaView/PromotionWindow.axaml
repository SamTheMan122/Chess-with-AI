<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Cecs475.BoardGames.Chess.AvaloniaView.PromotionWindow"
    Width="300"
    Height="160"
    Background="Gray"
    WindowStartupLocation="CenterOwner"
    CanResize="False"
    SystemDecorations="None">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">

		<TextBlock Text="Promote pawn to:"
				   FontSize="16"
				   FontWeight="Bold"
				   HorizontalAlignment="Center"
				   Margin="0,0,0,5" />

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
			<Border Width="48" Height="48" CornerRadius="4">
				<Border.Styles>
					<Style Selector="Border:pointerover">
						<Setter Property="Background" Value="LightGray"/>
					</Style>
				</Border.Styles>
				<Image Width="40" Height="40"
					   x:Name="KnightImage"
					   PointerPressed="OnPieceSelected"/>
			</Border>

			<Border Width="48" Height="48" CornerRadius="4">
				<Border.Styles>
					<Style Selector="Border:pointerover">
						<Setter Property="Background" Value="LightGray"/>
					</Style>
				</Border.Styles>
				<Image Width="40" Height="40"
					   x:Name="BishopImage"
					   PointerPressed="OnPieceSelected"/>
			</Border>

			<Border Width="48" Height="48" CornerRadius="4">
				<Border.Styles>
					<Style Selector="Border:pointerover">
						<Setter Property="Background" Value="LightGray"/>
					</Style>
				</Border.Styles>
				<Image Width="40" Height="40"
					   x:Name="RookImage"
					   PointerPressed="OnPieceSelected"/>
			</Border>

			<Border Width="48" Height="48" CornerRadius="4">
				<Border.Styles>
					<Style Selector="Border:pointerover">
						<Setter Property="Background" Value="LightGray"/>
					</Style>
				</Border.Styles>
				<Image Width="40" Height="40"
					   x:Name="QueenImage"
					   PointerPressed="OnPieceSelected"/>
			</Border>
		</StackPanel>
	</StackPanel>

</Window>
